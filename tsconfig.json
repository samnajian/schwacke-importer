{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ES5",
      "ES6",
      "ES2020"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "importsNotUsedAsValues": "remove",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.test.ts"
  ]
}